<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eventlocator.eventlocator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventLocator"
        android:usesCleartextTraffic="true">
        <service
            android:name="com.eventlocator.eventlocator.utilities.MessagingService"
            android:stopWithTask="false"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDplPLPkGMXu35fWIZlG4n_x7xzarQjhMk" />
        <activity android:name=".ui.ViewImageActivity"
            android:theme="@style/Theme.EventLocator.NoActionBar"></activity>
        <activity
            android:name=".ui.ViewLocationActivity"
            android:parentActivityName=".ui.ViewEventActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ViewEventActivity" />
        </activity>
        <activity android:name=".ui.QRCodesActivity"></activity>
        <activity android:name=".ui.SearchOrganizersActivity" />
        <activity android:name=".ui.FollowedOrganizersActivity" />
        <activity android:name=".ui.RateEventActivity" />
        <activity android:name=".ui.OrganizerEventsActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".ui.ViewEventActivity" />
        <activity
            android:name=".ui.OrganizerProfileActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.ChangePasswordActivity" />
        <activity android:name=".ui.UpdateEmailActivity" />
        <activity android:name=".ui.EditProfileActivity" />
        <activity android:name=".ui.SignUpActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.WelcomeActivity" />
        <activity
            android:name=".ui.EventsActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.EventLocator.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ParticipantEventsActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.EventLocator.NoActionBar" />
    </application>

</manifest>